{
  "manifest_version": 3,
  "name": "UPSC Notes & Anki Generator",
  "version": "1.0",
  "description": "Collect ChatGPT notes, generate Anki Q&A, and export as markdown or text.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "http://chat.openai.com/*",
    "https://chatgpt.com/*",
    "http://chatgpt.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "http://chat.openai.com/*",
        "https://chatgpt.com/*",
        "http://chatgpt.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
